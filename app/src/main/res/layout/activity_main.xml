<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity"
    android:background="@drawable/bg3">

    <LinearLayout
        android:id="@+id/imgLayout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFirst"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="24dp"
            android:src="@drawable/java2"
            android:contentDescription="@string/todooo">

        </ImageView>

        <ImageView
            android:id="@+id/imgSecond"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="24dp"
            android:src="@drawable/py2"
            android:contentDescription="@string/tod">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtLayout"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFirst"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="24dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:textSize="48sp"
            android:textStyle="bold">


        </TextView>

        <TextView
            android:id="@+id/txtSecond"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="24dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:textSize="48sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnFirst"
            android:layout_width="145dp"
            android:layout_height="63dp"
            android:layout_margin="24dp"
            android:text="@string/vote_for_java"
            android:textStyle="bold"
            android:textColor="@color/white"
>
        </Button>


        <Button
            android:id="@+id/btnSecond"
            android:layout_width="147dp"
            android:layout_height="63dp"
            android:layout_margin="24dp"
            android:text="vote for python"
            android:textStyle="bold"
            android:textColor="@color/white"
            >

        </Button>


    </LinearLayout>

    <Button
        android:id="@+id/bresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="result"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>
